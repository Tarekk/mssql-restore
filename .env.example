# MSSQL Backup Ingestion Service Configuration
# Copy this file to .env and adjust values as needed

# Core Settings
BACKUP_WATCH_DIR=/data/backups
BACKUP_SHARED_DIR=/shared_backup
APP_POLLING_INTERVAL=1.0
APP_LOG_LEVEL=INFO

# MSSQL Connection Settings
MSSQL_SERVER=localhost
MSSQL_PORT=1433
MSSQL_USER=sa
MSSQL_PASSWORD=YourStrongPassword123!
MSSQL_TIMEOUT=60

# Logging Settings
LOG_LEVEL=INFO
LOG_DIRECTORY=logs
LOG_MAX_SIZE_MB=10
LOG_BACKUP_COUNT=5
LOG_JSON_FORMAT=true